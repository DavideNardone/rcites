citHeader("To cite citesr use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{citesr}: An R package to access the CITES Speciesplus database",
         author = c(person("Jonas", "Geschke"),
                    person("Kevin", "Cazelles"),
                    person("Ignasi", "Bartomeus"),
                    person("Jonathan", "Goldenberg"),
                    person("Marie-BÃ©", "Leduc"),
                    person("Yasmine", "Verzelen")),
         year = year,
         note = note,
         url = "https://ibartomeus.github.io/citesr/")
